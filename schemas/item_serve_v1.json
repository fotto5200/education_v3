{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "item_serve_v1.json",
  "type": "object",
  "required": ["version", "session_id", "item", "choices", "serve"],
  "properties": {
    "version": { "type": "string" },
    "session_id": { "type": "string" },
    "item": {
      "type": "object",
      "required": ["id", "type", "content"],
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["mcq"] },
        "content": {
          "type": "object",
          "required": ["html"],
          "properties": {
            "html": { "type": "string" }
          },
          "additionalProperties": true
        },
        "media": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "signed_url", "ttl_s", "alt"],
            "properties": {
              "id": { "type": "string" },
              "signed_url": { "type": "string" },
              "ttl_s": { "type": "number" },
              "alt": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "choices": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "text"],
        "properties": {
          "id": { "type": "string" },
          "text": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "serve": {
      "type": "object",
      "required": ["seed", "choice_order", "watermark"],
      "properties": {
        "seed": { "type": "string" },
        "choice_order": {
          "type": "array",
          "items": { "type": "string" }
        },
        "watermark": { "type": "string" }
      },
      "additionalProperties": true
    },
    "ui": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": true
}
